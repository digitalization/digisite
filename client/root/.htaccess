<IfModule mod_rewrite.c>
	RewriteEngine On

	#API requests
	RewriteRule ^api/(.*)$ api.php/$1 [L]

	#Angular app
	RewriteCond %{REQUEST_FILENAME} !-f
	RewriteCond %{REQUEST_FILENAME} !-d
	RewriteCond %{REQUEST_URI} 		!(^assets/.*|^css/.*|^js/.*)
	RewriteRule ^(.*)$ index.html [L]
</IfModule>
<IfModule !mod_rewrite.c>
    ErrorDocument 404 /index.html
</IfModule>